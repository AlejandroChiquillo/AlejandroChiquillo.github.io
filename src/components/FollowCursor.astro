<img
    src="/icons/cursor_star.svg"
    class="flair flair--3 w-[32px] h-[32px] fixed top-0 left-0 pointer-events-none z-10"
/>
<script>
    // follow cursor animation
    import { gsap } from "gsap";

    gsap.set(".flair", { xPercent: -50, yPercent: -50 });

    let xTo = gsap.quickTo(".flair", "x", {
            duration: 0.6,
            ease: "power3",
        }),
        yTo = gsap.quickTo(".flair", "y", {
            duration: 0.6,
            ease: "power3",
        });

    window.addEventListener("mousemove", (e) => {
        xTo(e.clientX);
        yTo(e.clientY);
    });
</script>
